<div class="container">
  <% if !flash[:alert].nil? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6 text-center">
      <h3 class="form-heading">글 추가 작성하기</h3>

      <form action="/foods/write_complete" method="post" enctype="multipart/form-data">
        <p>+ 카테고리
        <select name="post_category">
          <option value="벤처">벤처</option>
          <option value="대경">대경</option>
          <option value="창모">창모</option>
          <option value="찬희">찬희</option>
        </select></p>
        <p><input class="form-input" type="text" name="post_title" placeholder="제목을 입력하세요."></p>
        <p><textarea class="form-textarea"  name="post_content" placeholder="내용을 입력하세요."></textarea></p>
        <input class="btn btn-lg btn-block" type="submit" value="추가하기">
      </form>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>
